#include <iostream>
#include <conio.h>
#include <cmath>

using namespace std;

int main(void)
{   //début p.p
int n;
float resultat, approximation;

cout<<"Saisir n :";
cin>>n;
resultat = 0;
approximation = 0.000001;

while (abs(n-(resultat * resultat )>approximation){
resultat = 0.5 * ((n/resultat) + resultat);
}

cout<<" Racine carré de "<<n<<"est "<<resultat;
getch();
return 0;
}
